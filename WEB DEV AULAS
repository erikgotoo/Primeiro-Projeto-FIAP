AULA 4

======= SCRIPT JS =======
do while
let count = 0
do{
    console.log (count);
    count++;
} while(count < 5) 


function contagem(){
    var n1 = parseInt(document.getElementById("numero").value);
    while (n1 > 0){
        console.log(n1)
        n1--
    } 
}


for(i=1;i>10;i++){
 console.log(i)
}


for(i=0; i<=10; i ++){
    console.log (i)
}


function tabuada(){
    var n1 = parseInt(document.getElementById("numero").value);
    for (i=1; i<= 10; i++){
      var multiplicacao = n1 * i 
      console.log(`A tabuada é ${i} * ${n1} = ${multiplicacao}`) 
   }
}


function verificar(){
        var n1 = parseInt(document.getElementById("numero").value);
        for (i=1; i <= n1; i++){
            if(n1 % i == 0) 
                console.log(`Os numeros são: ${i}`) 
       }
    }

